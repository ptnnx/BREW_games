{
    "scripts": {
        "clean": "rm -r _site",
        "develop": "eleventy --serve",
        "build": "eleventy",
        "postbuild": "npm run opt:js && npm run opt:font && npm run opt:svg && npm run opt:css",
        "serve": "http-server -p 8000 _site",
        "lighthouse": "npm run build && lhci autorun",
        "opt:js": "uglifyjs-folder -e -x .js _site/js -o _site/js",
        "opt:css": "cleancss -O2 --batch --batch-suffix '' _site/css/*.css",
        "opt:svg": "svgo _site/svg/*",
        "opt:font": "npm run ss:gen && npm run ss:apply",
        "ss:gen": "npx glyphhanger --formats woff2 --subset _site/fonts/*.woff _site/index.html",
        "ss:apply": "replace '(/fonts/.*)\\.woff' '$1-subset.woff2' _site/index.html"
    },
    "dependencies": {},
    "devDependencies": {
        "@11ty/eleventy": "^0.11.1",
        "@11ty/eleventy-cache-assets": "^2.1.0",
        "@11ty/eleventy-img": "^0.8.0",
        "@lhci/cli": "^0.7.0",
        "clean-css-cli": "^5.1.0",
        "fast-xml-parser": "^3.18.0",
        "glyphhanger": "^3.2.0",
        "html-minifier": "^4.0.0",
        "http-server": "^0.12.3",
        "replace": "^1.2.0",
        "svgo": "^1.3.2",
        "uglifyjs-folder": "^2.0.0"
    }
}
