{
    "scripts": {
        "clean": "rm -r _site",
        "develop": "eleventy --serve",
        "build": "eleventy",
        "postbuild": "npm run postbuild:js && npm run postbuild:font && npm run postbuild:svg && npm run postbuild:css",
        "postbuild:js": "uglifyjs-folder -e -x .js _site/js -o _site/js",
        "postbuild:css": "cleancss -O2 --batch --batch-suffix '' _site/css/*.css",
        "postbuild:font": "subfont _site/index.html --in-place --inline-css --no-fallbacks",
        "postbuild:svg": "svgo _site/svg/*",
        "serve": "http-server -p 8000 _site",
        "lighthouse": "npm run build && lhci autorun"
    },
    "dependencies": {},
    "devDependencies": {
        "@11ty/eleventy": "^0.11.1",
        "@11ty/eleventy-cache-assets": "^2.1.0",
        "@11ty/eleventy-img": "^0.8.0",
        "@lhci/cli": "^0.7.0",
        "clean-css-cli": "^5.1.0",
        "fast-xml-parser": "^3.18.0",
        "glyphhanger": "^3.2.0",
        "html-minifier": "^4.0.0",
        "http-server": "^0.12.3",
        "replace": "^1.2.0",
        "svgo": "^1.3.2",
        "uglifyjs-folder": "^2.0.0"
    }
}
