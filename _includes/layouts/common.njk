<!doctype html>
<html lang="ja">
  <head>
    <title>{{ title }}</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="zk-phi のホームページです" />
    {% if noindex %}
    <meta name="robots" content="noindex" />
    {% endif %}
    <script defer src="/js/loader.js"></script>
    <style>
{% include "css/common.css" %}
{% include "css/font.css" %}
{% for s in styles %}{% include s %}{% endfor %}
    </style>
  </head>
  <body id="body">
    <div id="content">
      {{ content | safe }}
    </div>
    <div id="stalker">🦄</div>
    <script>
const lazyScripts = [
    "/js/app.js",
    {% for s in lazyScripts %}
    "{{ s }}",
    {% endfor %}
];
const lazyStyles = [
    "/css/common.css",
    {% for s in lazyStyles %}
    "{{ s }}",
    {% endfor %}
];
document.body.classList.add("dotgothic");
    </script>
  </body>
</html>
