<hr />

{% for m in recentActivities %}
<div class="left">
  <h2 class="section-header">
    <span class="puni">{{ monthEmoji[m.month] }}</span>
    {{ m.month + 1 }}月<small>/{{ m.year }}</small>
  </h2>
  <ul class="list">
    {% for i in m.items %}
    <li class="item">
      <div class="activity-meta">
        <span class="activity-tag">{{ i.category | safe }}</span>
        <span class="activity-source">{{ i.source | safe }}</span>
      </div>
      <a class="link" target="_blank" rel="noreferrer" href="{{ i.link | safe }}">
        {{ i.title | safe }}
      </a>
    </li>
    {% endfor %}
  </ul>
</div>
{% endfor %}

<hr />

