{% for m in recentActivities %}
<div class="left">
  <h2 class="header">
    <span class="puni">{{ monthEmoji[m.month] }}</span>
    {{- m.month + 1 }}月<small>/{{ m.year }}</small>
  </h2>
  <ul class="list">
    {% for i in m.items %}
    <li class="item">
      <div class="activity-meta">
        <span class="activity-tag">
          {{- i.category -}}
        </span><span class="activity-source">
          {{- i.source -}}
        </span>
      </div>
      <a class="link" target="_blank" rel="noreferrer" href="{{ i.link }}">
        {{ i.title }}
      </a>
    </li>
    {% endfor %}
  </ul>
</div>
{% endfor %}

