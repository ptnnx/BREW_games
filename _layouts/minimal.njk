<!doctype html>
<html lang="ja">
  <head>
    <title>{{ title }}</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="zk-phi のホームページです" />
    {% if noindex %}
    <meta name="robots" content="noindex" />
    {% endif %}
    {% if not inlineStyles %}
    {% for s in styles %}
    <link rel="stylesheet" href="/{{ s }}">
    {% endfor %}
    {% endif %}
    <script defer src="/js/loader.js"></script>
    <style>
{% if inlineStyles %}
{% for s in styles %}{% include s %}{% endfor %}
{% endif %}
    </style>
  </head>
  <body id="{{ bodyId }}" class="{% if not delayFontLoad %}dotgothic{% endif %}">
    {{ content | safe }}
    <script>
const lazyScripts = ["/js/prefetch.js", {% for s in lazyScripts %}"/{{ s }}",{% endfor %}];
const lazyStyles = [{% for s in lazyStyles %}"/{{ s }}",{% endfor %}];
const prefetches = [{% for s in prefetches %}"/{{ s }}",{% endfor %}];
{% if delayFontLoad %}document.body.classList.add("dotgothic"){% endif %}
    </script>
  </body>
</html>
